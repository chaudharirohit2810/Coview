<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_marginTop="8dp"
                                                   android:layout_marginRight="8dp"
                                                   android:layout_marginLeft="8dp"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:scaleType="centerCrop"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/news_item_imageview" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:fontFamily="@font/poppins"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/news_item_title"
            app:layout_constraintStart_toEndOf="@+id/news_item_imageview"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/news_item_imageview"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/news_source_tv"
            app:layout_constraintTop_toBottomOf="@+id/news_item_title" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>